<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <title>CashLog</title>
</head>
<body>
<noscript>please enable JavaScript to view the website</noscript>

    <div class="container-l">
   
    </div>
    <div class="container-r">
        <div class="main">
            <div class="name">
                Welcome <%= userName %>
            </div>
            <div class="funds">
                You have <%= funds %>TND left to spend
            </div>
            <div class="time">
                <%= days %> Days left till the next month
            </div>
        </div>
        <div class="container-bottom">

            <div class="container-bottom-border"></div>

            <div class="adding-spendings flex-item">
                <form action="/add-deposits" method="post">
                    <div class="adding-value">
                        <label for="add-funds" class="my-auto">Add Deposits:</label>
                        <div class="input-add-value">
                            <input type="number" name="deposit" placeholder="Insert a value" maxlength="9" required>
                            <span>TND</span>
                        </div>
                    </div>
                    <div class="category-select">
                        <h2>Select a Category:</h2>
                        <span class="category-list">
                            <% categories.forEach((category) => { %>
                                <div class="form-check mb-2" style="display:flex; align-items:center; justify-content:flex-start;">
                                    <input type="radio" name="categorySelect" class="form-check-input" value="<%= category.categoryName %>">
                                    <label for="categorySelect" class="form-check-label mx-2"> <%= category.categoryName %> </label>
                                </div>
                            <% }) %>
                        </span>
                            <div class="add-cat mt-2">
                                <input type="text" name="newCategory" placeholder="Add Category" id="add-cat"> 
                                <button class="btn btn-ourline-danger" id="add-cat-btn">+</button>
                            </div>
                        <button type="submit" class="btn btn-outline-danger mt-4">Save</button>
                    </div>
                </form>
                <form action="/" method="post" id="addCategory" style="display:none;">
                    <input type="hidden" name="newCategory" id="new-category" required>
                </form>
            </div>

            <div class="stats flex-item">
                <h2>Overview:</h2>
                <div class="categories">
                    <ul class="list-group list-group-flush cat-list">
                        <span id="category-list-overview">
                            <% categories.forEach((category) => { %>
                            <li class="list-group-item" style="background:none;">
                                <%= category.categoryName %> : <%= category.CategoryDeposit %>TND
                            </li>
                            <% }) %>
                        </span>
                        <li class="list-group-item" style="background:none;" id="total">Total: <%= totalDeposits %>TND</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


    <script src="JS/index.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>
</html>